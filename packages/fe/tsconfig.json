{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "lib": [
      "dom",
      "dom.iterable",
      "es2018"
    ],
    "types": [
      "node",
      "vite/client",
      "vitest/globals"
    ],
    "baseUrl": ".",
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "importHelpers": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "deploy-scripts/**/*",
    "types/**/*"
  ],
  "exclude": ["**/node_modules/**"]
}
